@model NBD_BID_SYSTEM.Models.Client

@{
    ViewData["Title"] = "Create Client";
}

<h2 class="mb-3">Add New Client</h2>

<hr />

        <form asp-action="Create" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-5">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Client Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CpFName" class="control-label"></label>
                    <input asp-for="CpFName" class="form-control" placeholder="Enter First Name" />
                    <span asp-validation-for="CpFName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CpLName" class="control-label"></label>
                    <input asp-for="CpLName" class="form-control" placeholder="Enter Last Name" />
                    <span asp-validation-for="CpLName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CpPosition" class="control-label"></label>
                    <input asp-for="CpPosition" class="form-control" placeholder="Enter Position"/>
                    <span asp-validation-for="CpPosition" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Contact Number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" placeholder="Enter Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" placeholder="Enter City" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProvinceID" class="control-label"></label>
                    <select asp-for="ProvinceID" class="form-control" asp-items="ViewBag.ProvinceID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode" class="control-label"></label>
                    <input asp-for="PostalCode" class="form-control" placeholder="Enter Postal Code" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary mr-2" /> |
                    <a href='@ViewData["returnURL"]' class="ml-2">Back to Client List</a>
                </div>
            </div>
        </form>
 


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
